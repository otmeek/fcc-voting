doctype html
html

    include ./head.jade
        
    body
    
        include ./navbar.jade
    
        div#main.container
            h1.createH1 Sign in
            form.form-signin(method='post', action='/signin')
                if message.length > 0
                    div.alert.alert-danger= message
                label.sr-only(for='inputUsername') Username
                input#inputUsername.form-control(name='username', type='text', placeholder='Username', autofocus='autofocus', required=true)
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(name='password', type='password', placeholder='Password', required=true)
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
            p
                | Don't have an account? 
                a(href='/signup') Sign up!
            p or
                a.btn.btn-block.btn-social.btn-google(href='#')
                    span.fa.fa-google
                    | Sign in with Google
        

        include ./scripts.jade